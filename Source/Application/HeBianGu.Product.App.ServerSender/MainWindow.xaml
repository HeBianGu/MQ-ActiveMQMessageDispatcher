<Window x:Class="HeBianGu.Product.App.ServerSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeBianGu.Product.App.ServerSender"
        mc:Ignorable="d" Background="LightGray"
        Title="MainWindow" Height="150" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txt_message" TextWrapping="Wrap" Text="这个我要向ActiveMQ发的消息！" FontSize="20" VerticalContentAlignment="Center"/>

        <Button Content="发送消息" Height="30" Width="100" Margin="20,0" Grid.Row="1" Click="Button_Click"/>
    </Grid>
</Window>
